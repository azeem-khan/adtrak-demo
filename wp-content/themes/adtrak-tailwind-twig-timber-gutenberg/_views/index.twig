{% extends '_layout/base.twig' %}

{% block content %}

	{# News Index - Variant 2 #}
	<div class="container py-6 md:py-10">
		<div class="flex flex-col w-full lg:flex-row">

			<div class="order-1 w-full md:w-3/4 md:px-4 lg:px-6 md:order-2">
				<div class="flex flex-wrap md:-mx-4 lg:-mx-6">
					{% for post in posts %}
						<div class="w-full mb-10 md:w-1/2 lg:w-1/3 md:px-4 lg:px-6">
							<a href="{{ post.link }}" class="block bg-blue-100 rounded-lg group hover:bg-blue-300 focus:bg-blue-300">
								<div class="p-6">
									<span class="flex-1 inline-block mb-3 text-sm text-black opacity-50">{{ post.date }}</span>
									<span class="block mb-8 text-lg font-bold leading-tight text-black md:text-xl">{{ post.title }}</span>

									<span class="block text-black group-hover:text-gray-500 group-focus:text-gray-500">Read More
										<span class="text-gray-500">&raquo;</span>
									</span>
								</div>
							</a>
						</div>
					{% endfor %}
				</div>
			</div>
      
			<div class="p-6 mb-6 bg-gray-200 border border-gray-300 rounded-lg lg:p-8 md:mb-8">
				<span class="block mb-4 tracking-wider text-black uppercase">Categories</span>

				<ul>
					{% for cat in categories %}
						{# @INTEGRATION - check your permalinks to confirm this URL path is correct #}
						<li>
							<a href="{{ cat.link }}" class="block w-full py-1 text-black hover:text-gray-500 focus:text-gray-500">{{ cat.name }}</a>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>

{% endblock %}
